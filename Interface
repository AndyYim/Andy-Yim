import javax.swing.*;
import java.awt.*;
import java.awt.image.*;
import javax.imageio.*;
import java.io.*;
import java.util.Scanner;
import java.util.*;
import java.io.File;
import java.io.IOException;
import java.io.FileWriter;
import java.io.BufferedWriter;
import java.util.ArrayList;
/**
 * The class Inf1 is the interface for the replica of the Exploding Kittens game. 
 * @prereq      none
 * @param      none
 * @return       none             
 * @post        The program prints out a window containing a simulation of the game "Exploding Kittens" and inputs into and outputs files representing components of "Exploding Kittens".
 * Andy Yim and Tommy Yim 
 * 
 */
interface Inf1
{
   void firstPlayerStart(int numOfPlayers, ArrayList<String> EK) throws IOException;
   void secondPlayerStart(int numOfPlayers, ArrayList<String> EK, ArrayList<String> p1, int stat) throws IOException;
   void thirdPlayerStart(int numOfPlayers, ArrayList<String> EK, ArrayList<String> p1, ArrayList<String> p2, int stat) throws IOException;
   void fourthPlayerStart(int numOfPlayers, ArrayList<String> EK, ArrayList<String> p1, ArrayList<String> p2, ArrayList<String> p3, int stat) throws IOException;
}//ends interface

