 */
public class VisualHPC
{
	public void main() throws IOException
	{
    	HairyPotatoCat h = new HairyPotatoCat();
    	Scanner scan = new Scanner(System.in);
    	System.out.println("Type HPC");
    	String key = scan.nextLine();
    	if (key.equals("HPC"))
    	{
        	h.HPC();    	
    	}//ends if statement
	}//ends main method
}//ends VisualHPC class

